@model IEnumerable<WebApplication1.Models.SinhVien>

@{
    ViewBag.Title = "Sinhvien";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="color:blue">Danh Sách Sinh Viên</h2>
<p>

    <a href="@Url.Action("ThemmoiSv","Admin")" class="btn btn-info" role="button">Thêm mới sinh viên</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HoTen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Matkhau)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Diachisv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dienthoaisv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ngaysinh)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Matkhau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diachisv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dienthoaisv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ngaysinh)
            </td>
            <td>

                <a href="@Url.Action("ChitietSv", "Admin", new { id = item.Masv })" class="btn btn-info" role="button" style="border:none; width:70px; margin-bottom:10px ">Chi tiết</a>
                <a href="@Url.Action("SuaSv", "Admin", new { id = item.Masv })" class="btn btn-info" role="button" style="background-color:green; border:none;  width:70px; margin-bottom:10px">Sửa</a>

            </td>
        </tr>
    }

</table>
