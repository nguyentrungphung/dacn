@model WebApplication1.Models.BaoCao
@{
    ViewBag.Title = "Nopbai";
    Layout = "~/Views/Shared/_LayoutClassroom.cshtml";
}

@using (Html.BeginForm("Nopbai", "Classroom", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="container mt-5">
        <div class="card title" style="background-image:url(https://gstatic.com/classroom/themes/img_bookclub.jpg); padding: 50px 0 ; color: #ffffff; box-shadow: unset; ">
            <div class="card-body">
                <h5 class="card-title">@Model.Mon.TenMon</h5>
                <p class="card-text">@Model.Giangvien.HoTen</p>

            </div>
        </div>
        <div class="row" style="margin-top: 20px;">
            <div class="col-3">
                <div class="card" style=" box-shadow: unset;">
                    <div class="card-body">
                        <h5 class="card-title">Thời hạn nộp</h5>
                        <p>Nộp hàng tuần vào thứ 7 (deadline 12h)</p>
                    </div>
                </div>
            </div>

            <div class="col-md-9">
                <div class="card " style=" box-shadow: unset;">

                    <div class="card-body">
                        <h5 class="card-title">Form báo cáo hàng tuần</h5>
                        <span id="inputGroup-sizing-sm">Họ tên sinh viên</span>
                        <div class="input-group input-group-sm mb-3">
                            @Html.EditorFor(model => model.SinhVien.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SinhVien.HoTen, "", new { @class = "text-danger" })
                        </div>
                        <span id="inputGroup-sizing-sm">Mã số sinh viên</span>
                        <div class="input-group input-group-sm mb-3">
                            @Html.EditorFor(model => model.SinhVien.Masv, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SinhVien.Masv, "", new { @class = "text-danger" })
                        </div>
                        <span id="inputGroup-sizing-sm">Lớp</span>
                        <div class="input-group input-group-sm mb-3">
                            @Html.EditorFor(model => model.SinhVien.Lop.TenLop, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SinhVien.Lop.TenLop, "", new { @class = "text-danger" })
                        </div>
                        <span id="inputGroup-sizing-sm">Nội Dung Báo Cáo</span>
                        <div class="input-group input-group-sm mb-3">
                            <textarea name="Noidung" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" style="height:150px"></textarea>
                        </div>
                        <span id="inputGroup-sizing-sm">Link Demo</span>
                        <div class="input-group input-group-sm mb-3">
                            <input type="text" name="linkdemo" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
                        </div>
                        <span id="inputGroup-sizing-sm">File Đồ Án</span>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">

                            </div>
                            <div class="custom-file ">
                                @*<input type="submit" value="Upload" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
                                    <label class="custom-file-label" for="inputGroupFile01"></label>*@
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="file">
                                    <label class="custom-file-label" for="customFile">Chọn file</label>
                                </div>
                                @ViewBag.Message
                            </div>
                        </div>
                        

                        
                    </div>

                </div>
            </div>

        </div>

    </div>
}
   
<div class="folder" style="padding: 0;">
    <button id="btnNopBai" onclick="nopBai()" type="submit" value="Nop" class="btn btn-outline-success " style="width: 20%; margin: 20px auto">Nộp</button>
</div>
